            <Rectangle Grid.Row="6" Grid.Column="5" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="6" Grid.Column="6" Fill="White"/>
            <Rectangle Grid.Row="6" Grid.Column="7" Fill="#8B5A2B"/>

            <Rectangle Grid.Row="7" Grid.Column="0" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="7" Grid.Column="1" Fill="White"/>
            <Rectangle Grid.Row="7" Grid.Column="2" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="7" Grid.Column="3" Fill="White"/>
            <Rectangle Grid.Row="7" Grid.Column="4" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="7" Grid.Column="5" Fill="White"/>
            <Rectangle Grid.Row="7" Grid.Column="6" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="7" Grid.Column="7" Fill="White"/>



        </Grid>
    </DockPanel>

</Window>
