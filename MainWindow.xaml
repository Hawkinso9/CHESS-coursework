<Window x:Class="CHESS_coursework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CHESS_coursework"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1100">
    <DockPanel>
        <Border Width="200" Background="Navy"  DockPanel.Dock="Left" >
            <Button Content="Start Game"
        FontSize="36"
        HorizontalAlignment="Stretch"
        Height="130"
        Margin="10"
        ClickMode="Press"
        Click="InitialiseClick"
        x:Name="InitialiseButton"
        />
        </Border>
        <Border Width="10" Background="Gold" DockPanel.Dock="Left"/>

        <Grid x:Name="chessGrid">


            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Rectangle Grid.Row="0" Grid.Column="0" Fill="White"/>
            <Rectangle Grid.Row="0" Grid.Column="1" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="0" Grid.Column="2" Fill="White"/>
            <Rectangle Grid.Row="0" Grid.Column="3" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="0" Grid.Column="4" Fill="White"/>
            <Rectangle Grid.Row="0" Grid.Column="5" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="0" Grid.Column="6" Fill="White"/>
            <Rectangle Grid.Row="0" Grid.Column="7" Fill="#8B5A2B"/>

            <Rectangle Grid.Row="1" Grid.Column="0" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="1" Grid.Column="1" Fill="White"/>
            <Rectangle Grid.Row="1" Grid.Column="2" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="1" Grid.Column="3" Fill="White"/>
            <Rectangle Grid.Row="1" Grid.Column="4" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="1" Grid.Column="5" Fill="White"/>
            <Rectangle Grid.Row="1" Grid.Column="6" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="1" Grid.Column="7" Fill="White"/>

            <Rectangle Grid.Row="2" Grid.Column="0" Fill="White"/>
            <Rectangle Grid.Row="2" Grid.Column="1" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="2" Grid.Column="2" Fill="White"/>
            <Rectangle Grid.Row="2" Grid.Column="3" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="2" Grid.Column="4" Fill="White"/>
            <Rectangle Grid.Row="2" Grid.Column="5" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="2" Grid.Column="6" Fill="White"/>
            <Rectangle Grid.Row="2" Grid.Column="7" Fill="#8B5A2B"/>

            <Rectangle Grid.Row="3" Grid.Column="0" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="3" Grid.Column="1" Fill="White"/>
            <Rectangle Grid.Row="3" Grid.Column="2" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="3" Grid.Column="3" Fill="White"/>
            <Rectangle Grid.Row="3" Grid.Column="4" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="3" Grid.Column="5" Fill="White"/>
            <Rectangle Grid.Row="3" Grid.Column="6" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="3" Grid.Column="7" Fill="White"/>

            <Rectangle Grid.Row="4" Grid.Column="0" Fill="White"/>
            <Rectangle Grid.Row="4" Grid.Column="1" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="4" Grid.Column="2" Fill="White"/>
            <Rectangle Grid.Row="4" Grid.Column="3" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="4" Grid.Column="4" Fill="White"/>
            <Rectangle Grid.Row="4" Grid.Column="5" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="4" Grid.Column="6" Fill="White"/>
            <Rectangle Grid.Row="4" Grid.Column="7" Fill="#8B5A2B"/>

            <Rectangle Grid.Row="5" Grid.Column="0" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="5" Grid.Column="1" Fill="White"/>
            <Rectangle Grid.Row="5" Grid.Column="2" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="5" Grid.Column="3" Fill="White"/>
            <Rectangle Grid.Row="5" Grid.Column="4" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="5" Grid.Column="5" Fill="White"/>
            <Rectangle Grid.Row="5" Grid.Column="6" Fill="#8B5A2B"/>
            <Rectangle Grid.Row="5" Grid.Column="7" Fill="White"/>

            <Rectangle Grid.Row="6" Grid.Column="0" Fill="White"/>
            <Rectangle Grid.Row="6" Grid.Column="1" Fill="#8B5A2B"/>
